@model IEnumerable<Cloud_Storage.Models.Birder>

<h1>Birders</h1>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Birder</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var birder in Model)
        {
            <tr>
                <td>@birder.Birder_Name</td>
                <td>@birder.email</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@birder.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@birder.RowKey" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this birder?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
